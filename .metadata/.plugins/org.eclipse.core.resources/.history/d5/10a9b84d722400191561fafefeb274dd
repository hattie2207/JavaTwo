package splitString;

public class English {

	public static void printOne(String message) {

		String[] splited = message.split("\\s+");

		for (int i = splited.length - 1; i >= 0;  i--) {

			System.out.println(splited[i]);

		}

	}

	public static String find(String find, String message) {

		int count = 0;	
		String[] splited = message.split("\\s+");

		for (int i = 0; i < splited.length;  i++) {
			
			if(splited[i].equals(find)) {
				count++;
			}
		}
		
		return "The word \"" + find + "\" occurs " + count + " times";
	}
	
	

	public static void main(String[] args) {

		String message = "I am going going to London";
		String find = "going";

//		English.printOne(message);
		System.out.println(English.find(find, message));

	}

}
