
public class Converter {

	public String DigitsToWords(int digits) {

		String message = ""; 
		String digitsWord = "";

		if (digits == 0) {
			message += "Zero";
		}

		digitsWord = Integer.toString(digits);

		for (int i = 0; i < digitsWord.length(); i++){

			char c = digitsWord.charAt(i);

			switch (c) {

			case '1': 
				if (digitsWord.length() == 2 && message ==  "") {
					message += "Twenty";
				}
				else {
					message += "One";
				}
				break;
			case '2': 	
				if (digitsWord.length() == 2 && message ==  "") {
					message += "Twenty";
				}
				else {
					message += "Two";
				}
				break;
			case '3': 
				message += "Three";
				break;
			case '4': 
				message += "Four";
				break;
			case '5': 
				message += "Five";
				break;
			case '6': 
				message += "Six";
				break;
			case '7': 
				message += "Seven";
				break;
			case '8': 
				message += "Eight";
				break;
			case '9': 
				message += "Nine";
				break;

			}

		}			

		return message; 

	}

	public static void main(String[] args) {

		Converter c = new Converter();
		String outputMessage = c.DigitsToWords(22);

		System.out.println(outputMessage);
	}


