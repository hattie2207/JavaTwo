
public class Converter {
	
	public String DigitsToWords(int digits) {
		
		String message = "0"; 
		String digitsWord = "";
		
		System.out.println(message);
		
		if (digits == 0) {
			message += "Zero";
		}
		
		digitsWord = Integer.toString(digits);
		
		for (int i = 0; i < digitsWord.length(); i++){
			
			if (digitsWord.contains("1")) {
				message += "One";
			}
			else if (digitsWord.contains("2")) {
				message += "Two";
			}
			else if (digitsWord.contains("3")) {
				message += "Three";
			}
			else if (digitsWord.contains("4")) {
				message += "Four";
			}
			else if (digitsWord.contains("5")) {
				message += "Five";
			}
			else if (digitsWord.contains("6")) {
				message += "Six";
			}
			else if (digitsWord.contains("7")) {
				message += "Seven";
			}
			else if (digitsWord.contains("8")) {
				message += "Eight";
			}
			else if (digitsWord.contains("9")) {
				message += "Nine";
			}
			else {
				
			}	
			
			
		}			
		
		return message; 
		
	}
	
	public static void main(String[] args) {
		
		Converter c = new Converter();
		String outputMessage = c.DigitsToWords(45);
		
		System.out.println(outputMessage);
	}

}
